{
  "name": "@goreal-ai/echo-pdk",
  "version": "0.8.0",
  "description": "Echo PDK core rendering engine - parser, evaluator, and renderer",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./project": {
      "types": "./dist/project/index.d.ts",
      "import": "./dist/project/index.js"
    },
    "./providers": {
      "types": "./dist/providers/index.d.ts",
      "import": "./dist/providers/index.js"
    },
    "./embeddings": {
      "types": "./dist/embeddings/index.d.ts",
      "import": "./dist/embeddings/index.js"
    }
  },
  "files": [
    "dist",
    "scripts",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/GoReal-AI/echo-pdk.git",
    "directory": "packages/core"
  },
  "bugs": {
    "url": "https://github.com/GoReal-AI/echo-pdk/issues"
  },
  "homepage": "https://github.com/GoReal-AI/echo-pdk#readme",
  "author": "GoReal.AI",
  "scripts": {
    "build": "tsc",
    "build:graaljs": "node scripts/bundle-for-graaljs.mjs",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "chevrotain": "^11.0.0",
    "yaml": "^2.3.0"
  },
  "peerDependencies": {
    "@goreal-ai/plp-client": "^1.2.0"
  },
  "peerDependenciesMeta": {
    "@goreal-ai/plp-client": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "esbuild": "^0.27.2",
    "typescript": "^5.3.0",
    "vitest": "^2.0.0"
  },
  "keywords": [
    "echo",
    "pdk",
    "prompt",
    "dsl",
    "parser",
    "templating"
  ],
  "license": "MIT"
}
