{
  "name": "echo-pdk",
  "version": "0.1.0",
  "description": "Echo Prompt Development Kit - A DSL for dynamic prompt templating",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=20.0.0"
  },
  "packageManager": "pnpm@9.0.0",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "typecheck": "turbo run typecheck",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,yaml}\"",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "eslint": "^8.56.0",
    "husky": "^9.0.0",
    "prettier": "^3.2.0",
    "turbo": "^2.0.0",
    "typescript": "^5.3.0",
    "vitest": "^2.0.0"
  },
  "keywords": [
    "prompt",
    "dsl",
    "templating",
    "llm",
    "ai",
    "dynamic-prompts",
    "prompt-engineering"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/GoReal-AI/echo-pdk.git"
  },
  "bugs": {
    "url": "https://github.com/GoReal-AI/echo-pdk/issues"
  },
  "homepage": "https://github.com/GoReal-AI/echo-pdk#readme"
}
